---
const { href, class: className } = Astro.props;
---

<a 
  href={href}
  class={`${className} border-secondary-gray hover:bg-secondary-gray hover:text-white text-white
  rounded-full border-2 flex justify-center items-center 
  gap-x-2 py-1 px-2 lg:py-2 lg:px-4 text-sm lg:text-base`}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
