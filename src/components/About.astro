---
import { aboutInfo } from "../storage/aboutInfo";
import AboutCard from "./ui/AboutCard.astro";
---

<article class="flex flex-col items-center justify-center">
  <!-- Grid de cards -->
  <div class="w-full pt-8 lg:pt-12">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8
         place-items-center max-w-6xl mx-auto px-4"
    >
      {aboutInfo.map((aboutInfo) => <AboutCard aboutInfo={aboutInfo} />)}
    </div>
  </div>
  <!-- Acceso a mi CV -->
  <a 
    target="_blank" href="https://drive.google.com/file/d/1vL35BzCD70gszEGYL2FHTkRpXlFu7h7O/view?usp=sharing"
    class="
    w-70 lg:w-1/2 flex items-center justify-center mt-6 p-2 rounded-lg 
    bg-linear-to-br from-primary-gray to-secondary-gray border-2 border-secondary-gray 
    hover:shadow-lg hover:shadow-secondary-gray/20 
    transition-all duration-300 hover:-translate-y-1 hover:cursor-pointer
    "
  >
    <div class="text-tertiary-gray flex gap-2 hover:text-primary-600 transition-colors duration-200">
      <span class="text-lg">Mi Hoja de Vida (CV)</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
      </svg>
    </div>
  </a>
</article>
